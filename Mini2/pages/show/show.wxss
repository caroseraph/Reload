/* pages/show/show.wxss */

page{
	height: 100%;
	background-color: #1a1a1a;
}
.swiper{
	width: 100%;
	height: 280rpx;
	margin-top: 20rpx;
	margin-bottom: 20rpx;
  }
  .swiper-img{
	width: 100%;
	height: 280rpx;
  }
  .item-Img{
	width: 92%;
	height: 270rpx;
	border-radius: 15rpx;
	/* box-shadow: 3px 3px 3px 1px #ccc; */
	margin-top: 10rpx;
  }
  .item{
	display: flex;
	justify-content: center;
  }
  

.content {
	width: 100%;
	/* display: flex;
	flex-direction: column;
	align-items: left;
	justify-content: space-between; */
	padding: 0 0 160rpx;
	/* box-sizing: border-box; */
	/* background: rgb(26, 26, 26); */
	/* background-color: #1a1a1a; */
} 

.content .title {
	padding-left: 30rpx;
	font-size: 40rpx;
	color:rgb(255, 255, 255);
}

.content .area{
	margin: 20rpx 0 5rpx;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	align-content: flex-start;
}

.content .area .button{
	margin: auto 20rpx;
	width: 200rpx;
	height: 59rpx;
	background: #434343;
	color: #FFCBB0;
	border-radius: 23.25px;
	/*字体居中*/
	display: flex;
	align-items: center;
	justify-content: center;
}

.content .area .button .text{
	line-height: 59rpx;
	font-size: 30rpx;
	font-weight: 500;
}

.content .area .button.active{
	background: #FFCBB0;
	color: #434343;
}

/*视频*/
.videoItem {
	padding: 20rpx 3%;
}
.videoItem video{
	height: 360rpx;
	width: 100%;
	border-radius: 10rpx;
}
  